      <script>
        const startingMinutes = 0.30;
        let time  = startingMinutes*60;
        let is_Visible = true;
         
        const countDownData = document.getElementById("countDown");
      
        setInterval(updateTime , 1000);
  
        function updateTime (){
            const minutes = Math.floor(time/60);
            
          //  let currentTime = document.getElementById("#countDown");
          //  console.log(countDownData.); 
          //  alert(minutes)

            let seconds   = time % 60;
            seconds  =  seconds < 10 ? '0' + seconds : seconds;
            countDown.innerHTML = `${minutes}:${seconds}`;
            time--;

            if(`${minutes}:${seconds}` == '0:10'){
                document.getElementById("redirect").innerHTML=" SORRY ! you are not responding  or might be some technical issue . ";
            }
            if(`${minutes}:${seconds}` == '0:08'){
                setInterval(blinkingText , 500);
              
            }
             
            if(`${minutes}:${seconds}` == '0:02'){
                document.getElementById("redirect").innerHTML=" we are redirecting to Sign-up page , ";
                document.getElementById("redirect").style.color = "black";
            }
            if(`${minutes}:${seconds}` == '0:00'){
                window.location="/sign-up";
            }
        }

        const blinkingText=()=>{
                $("#mainDiv").hide();
                document.getElementById("redirect").innerHTML=" Verification failed . ";
                document.getElementById("redirect").style.color = "red";
               // document.getElementById("redirect").style.fontWeight=900;
               if(is_Visible){ 
                   document.getElementById("redirect").innerHTML=" ";
                   is_Visible = false;
              }else{
                  document.getElementById("redirect").innerHTML="  Verification failed .";
                   is_Visible = true;
              }

        }
      </script>

